<%- include('./partials/header', { isAdmin: true }) %>

<div class="container mx-auto px-4 md:px-8 py-8 flex-grow" style="background-color: #FAFAFA;">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold" style="color: #1E1E1E;">Contact Messages</h1>
        <a href="/owners/admin" class="px-4 py-2 rounded-lg text-white transition-colors" style="background-color: #B76E79;" onmouseover="this.style.backgroundColor='#A05A66'" onmouseout="this.style.backgroundColor='#B76E79'">
            Back to Dashboard
        </a>
    </div>

    <% if(contacts.length === 0) { %>
        <div class="text-center py-12">
            <i class="ri-mail-line text-6xl mb-4" style="color: #999;"></i>
            <p class="text-xl text-gray-600">No contact messages yet</p>
        </div>
    <% } else { %>
        <div class="overflow-x-auto">
            <table class="min-w-full bg-white rounded-lg shadow overflow-hidden">
                <thead style="background-color: #B76E79;">
                    <tr>
                        <th class="py-3 px-4 text-left text-white font-semibold">Name</th>
                        <th class="py-3 px-4 text-left text-white font-semibold">Email</th>
                        <th class="py-3 px-4 text-left text-white font-semibold">Message</th>
                        <th class="py-3 px-4 text-left text-white font-semibold">Date</th>
                        <th class="py-3 px-4 text-left text-white font-semibold">Status</th>
                        <th class="py-3 px-4 text-left text-white font-semibold">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% contacts.forEach(function(contact) { %>
                        <tr class="border-b border-gray-200 hover:bg-gray-50">
                            <td class="py-3 px-4 font-medium" style="color: #1E1E1E;"><%= contact.name %></td>
                            <td class="py-3 px-4 text-gray-700"><%= contact.email %></td>
                            <td class="py-3 px-4 text-gray-700 max-w-xs truncate" title="<%= contact.message %>"><%= contact.message.length > 50 ? contact.message.substring(0, 50) + '...' : contact.message %></td>
                            <td class="py-3 px-4 text-gray-700"><%= new Date(contact.date).toLocaleDateString() %></td>
                            <td class="py-3 px-4">
                                <% if(contact.status === 'new') { %>
                                    <span class="px-2 py-1 rounded-full text-xs font-semibold" style="background-color: #FEF3C7; color: #D97706;">New</span>
                                <% } else if(contact.status === 'read') { %>
                                    <span class="px-2 py-1 rounded-full text-xs font-semibold" style="background-color: #DBEAFE; color: #2563EB;">Read</span>
                                <% } else { %>
                                    <span class="px-2 py-1 rounded-full text-xs font-semibold" style="background-color: #D1FAE5; color: #059669;">Replied</span>
                                <% } %>
                            </td>
                            <td class="py-3 px-4">
                                <div class="flex gap-2">
                                    <% if(contact.status !== 'read' && contact.status !== 'replied') { %>
                                        <button onclick="markAsRead('<%= contact._id %>')" class="px-3 py-1 rounded text-white text-sm" style="background-color: #10B981;" onmouseover="this.style.backgroundColor='#059669'" onmouseout="this.style.backgroundColor='#10B981'">
                                            Mark Read
                                        </button>
                                    <% } %>
                                    <button onclick="deleteContact('<%= contact._id %>')" class="px-3 py-1 rounded text-white text-sm" style="background-color: #EF4444;" onmouseover="this.style.backgroundColor='#DC2626'" onmouseout="this.style.backgroundColor='#EF4444'">
                                        Delete
                                    </button>
                                </div>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    <% } %>
</div>

<script>
async function markAsRead(id) {
    if(confirm('Mark this message as read?')) {
        try {
            const response = await fetch(`/owners/contact-mark-read/${id}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            const result = await response.json();
            
            if(result.success) {
                location.reload();
            } else {
                alert(result.message);
            }
        } catch (error) {
            console.error('Error marking as read:', error);
            alert('An error occurred');
        }
    }
}

async function deleteContact(id) {
    if(confirm('Are you sure you want to delete this message?')) {
        try {
            const response = await fetch(`/owners/contact-delete/${id}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            const result = await response.json();
            
            if(result.success) {
                location.reload();
            } else {
                alert(result.message);
            }
        } catch (error) {
            console.error('Error deleting contact:', error);
            alert('An error occurred');
        }
    }
}
</script>

<%- include('./partials/footer') %>