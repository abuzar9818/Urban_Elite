<%- include('./partials/header') %>

    <div class="flex-grow p-4 md:p-8" style="background:linear-gradient(135deg,#4ade80 0%,#22c55e 100%);">

        <div class="max-w-2xl w-full bg-white rounded-2xl shadow-2xl overflow-hidden mx-auto">

            <!-- Header -->
            <div class="bg-gradient-to-r from-green-500 to-emerald-600 p-8 text-center">
                <div class="flex justify-center mb-6">
                    <div class="w-20 h-20 rounded-full bg-white flex items-center justify-center">
                        <i class="ri-checkbox-circle-fill text-4xl text-green-500"></i>
                    </div>
                </div>
                <h1 class="text-3xl font-bold text-white mb-2">Order Confirmed!</h1>
                <p class="text-green-100 text-lg">Thank you for your purchase</p>
            </div>

            <!-- Order Summary -->
            <div class="p-8">

                <div class="text-center mb-8">
                    <h2 class="text-2xl font-bold text-gray-800 mb-4">Order Summary</h2>

                    <div class="bg-gray-50 rounded-xl p-6">

                        <div class="flex justify-between mb-4 border-b pb-4">
                            <span class="text-gray-600">Order ID:</span>
                            <span class="font-mono font-bold">
                                <%= order.id %>
                            </span>
                        </div>

                        <div class="flex justify-between mb-4 border-b pb-4">
                            <span class="text-gray-600">Order Date:</span>
                            <span>
                                <%= new Date(order.date).toLocaleDateString() %>
                            </span>
                        </div>


                        <div class="flex justify-between">
                            <span class="text-gray-600">Total Amount:</span>
                            <span class="text-2xl font-bold text-green-600">
                                ₹ <%= Number(order.total || 0).toFixed(2) %>
                            </span>
                        </div>

                    </div>
                </div>

                <!-- Items Purchased -->
                <div class="mb-8">
                    <h3 class="text-xl font-semibold mb-4">Items Purchased</h3>

                    <div class="space-y-3">

                        <% order.items.forEach(function(item){ %>
                            <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg">

                                <!-- LEFT SIDE (Image + Name + Qty) -->
                                <div class="flex items-center gap-4">

                                    <% if(item.image){ %>
                                        <div class="w-16 h-16 rounded-lg overflow-hidden flex items-center justify-center"
                                            style="background-color:<%= item.bgcolor || '#f3f4f6' %>;">
                                            <img src="<%= item.image.replace('/upload/', '/upload/f_auto,q_auto,w_600/') %>"
                                                alt="<%= item.name %>" class="h-12 w-auto object-contain"
                                                loading="lazy">
                                        </div>
                                        <% } else { %>
                                            <div
                                                class="w-16 h-16 rounded-lg bg-gray-200 flex items-center justify-center">
                                                <i class="ri-image-line text-gray-400 text-xl"></i>
                                            </div>
                                            <% } %>

                                                <div>
                                                    <% var qty=item.quantity || 1; var finalPrice=item.price; %>

                                                        <h4 class="font-medium">
                                                            <%= item.name %>
                                                        </h4>

                                                        <p class="text-gray-500 text-sm">
                                                            Qty: <%= qty %>
                                                        </p>
                                                </div>

                                </div>

                                <!-- RIGHT SIDE (PRICE) -->
                                <span class="font-semibold text-green-600 text-lg">
                                    ₹<%= finalPrice %>
                                </span>

                            </div>
                            <% }) %>

                    </div>
                </div>

                <!-- Order Status -->
                <div class="text-center mb-8">

                    <div class="inline-flex items-center gap-6">

                        <div class="flex flex-col items-center">
                            <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center mb-2">
                                <i class="ri-checkbox-circle-fill text-white"></i>
                            </div>
                            <span class="text-sm font-medium text-green-600">Ordered</span>
                        </div>

                        <div class="w-16 h-1 bg-green-300 rounded"></div>

                        <div class="flex flex-col items-center">
                            <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center mb-2">
                                <i class="ri-truck-fill text-white"></i>
                            </div>
                            <span class="text-sm font-medium text-green-600">Shipped</span>
                        </div>

                        <div class="w-16 h-1 bg-green-300 rounded"></div>

                        <div class="flex flex-col items-center">
                            <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center mb-2">
                                <i class="ri-home-4-fill text-white"></i>
                            </div>
                            <span class="text-sm font-medium text-green-600">Delivered</span>
                        </div>

                    </div>

                </div>

                <!-- Go Home Button -->
                <div class="text-center">

                    <a href="/home"
                        class="inline-block px-8 py-3 bg-gradient-to-r from-green-500 to-emerald-600 text-white font-semibold rounded-lg shadow-lg hover:from-green-600 hover:to-emerald-700 transition-all">

                        <i class="ri-home-4-line mr-2"></i>
                        Go to Homepage

                    </a>

                </div>

            </div>
        </div>
    </div>

    <%- include('./partials/footer') %>