<%- include('./partials/header') %>
    <% if(error && error.length>0){ %>
        <div class="fixed top-20 left-1/2 -translate-x-1/2 z-50 p-4 rounded-lg bg-red-500 shadow-lg animate-fade-in">
            <span class="inline-block text-white font-medium">
                <%= Array.isArray(error) ? error[0] : error %>
            </span>
        </div>
    <% } %>

    <% if(success && success.length>0){ %>
        <div class="fixed top-20 left-1/2 -translate-x-1/2 z-50 p-4 rounded-lg bg-green-500 shadow-lg animate-fade-in">
            <span class="inline-block text-white font-medium">
                <%= Array.isArray(success) ? success[0] : success %>
            </span>
        </div>
    <% } %>

    <div class="flex-grow flex items-center justify-center px-4 py-8 md:py-12 relative overflow-hidden min-h-screen" style="background: linear-gradient(135deg, rgba(102, 126, 234, 0.1) 0%, rgba(118, 75, 162, 0.1) 100%), url('https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=1920') center/cover;">
        <div class="absolute inset-0 bg-black bg-opacity-40"></div>
        <div class="relative z-10 w-full max-w-md">
            <div class="bg-white rounded-2xl shadow-2xl p-8 md:p-12 backdrop-blur-sm bg-opacity-95">
                <div class="text-center mb-8">
                    <h2 class="text-4xl font-bold mb-2 brand-font bg-gradient-to-r from-purple-600 to-pink-600 bg-clip-text text-transparent">
                        URBAN ÉLITE
                    </h2>
                    <h3 class="text-2xl font-semibold mb-2 text-gray-800">Admin Access</h3>
                    <p class="text-gray-600">Sign in to manage your store</p>
                </div>
                <form action="/owners/login" method="post" class="space-y-5">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                        <input 
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
                            type="email" 
                            placeholder="admin@urbanelite.com" 
                            name="email"
                            required>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Password</label>
                        <input 
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 focus:border-transparent transition-all"
                            type="password" 
                            placeholder="Enter your password" 
                            name="password"
                            required>
                    </div>
                    <button 
                        type="submit" 
                        class="w-full px-5 py-3 rounded-lg bg-gradient-to-r from-purple-600 to-pink-600 text-white font-semibold hover:from-purple-700 hover:to-pink-700 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5">
                        Login
                    </button>
                </form>
                <div class="mt-6 text-center">
                    <!-- <p class="text-gray-600">Don't have an account? 
                        <a href="/owners/register" class="text-purple-600 hover:text-purple-700 font-semibold">Register here</a>
                    </p> -->
                    <a href="/" class="text-purple-600 hover:text-purple-700 text-sm font-medium mt-2 inline-block">← Back to Home</a>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer') %>