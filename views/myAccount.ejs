<%- include('./partials/header') %>

<div class="container mx-auto px-4 md:px-8 py-8 md:py-12 flex-grow" style="background-color: #FAFAFA;">
    <h1 class="text-3xl font-bold mb-8" style="color: #1E1E1E;">My Account</h1>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        <!-- Account Info -->
        <div class="lg:col-span-2 space-y-6">
            <div class="rounded-lg shadow-md p-6" style="background-color: #FAFAFA; border: 1px solid #E5E5E5;">
                <h2 class="text-xl font-bold mb-4" style="color: #1E1E1E;">Personal Information</h2>
                
                <form id="updateProfileForm" class="space-y-4">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="block text-sm font-medium mb-2" style="color: #1E1E1E;">Full Name</label>
                            <input 
                                type="text" 
                                id="fullName" 
                                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-rose-300"
                                style="background-color: #fff;"
                                value="<%= user.fullName || '' %>"
                                readonly
                            >
                        </div>
                        <div>
                            <label class="block text-sm font-medium mb-2" style="color: #1E1E1E;">Email Address</label>
                            <input 
                                type="email" 
                                id="email" 
                                class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-rose-300"
                                style="background-color: #fff;"
                                value="<%= user.email || '' %>"
                                readonly
                            >
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium mb-2" style="color: #1E1E1E;">Phone Number</label>
                        <input 
                            type="tel" 
                            id="contact" 
                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-rose-300"
                            style="background-color: #fff;"
                            value="<%= user.contact || '' %>"
                        >
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium mb-2" style="color: #1E1E1E;">Address</label>
                        <textarea 
                            id="address" 
                            rows="3"
                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-rose-300"
                            style="background-color: #fff;"
                        ><%= user.address || '' %></textarea>
                    </div>
                    
                    <button 
                        type="submit" 
                        class="px-6 py-3 rounded-lg text-white font-semibold transition-colors"
                        style="background: linear-gradient(135deg, #B76E79 0%, #A05A66 100%);"
                        onmouseover="this.style.background='linear-gradient(135deg, #A05A66 0%, #8A4A56 100%)'"
                        onmouseout="this.style.background='linear-gradient(135deg, #B76E79 0%, #A05A66 100%)'"
                    >
                        Update Profile
                    </button>
                </form>
            </div>
            
            <div class="rounded-lg shadow-md p-6" style="background-color: #FAFAFA; border: 1px solid #E5E5E5;">
                <h2 class="text-xl font-bold mb-4" style="color: #1E1E1E;">Change Password</h2>
                
                <form id="changePasswordForm" class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium mb-2" style="color: #1E1E1E;">Current Password</label>
                        <input 
                            type="password" 
                            id="currentPassword" 
                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-rose-300"
                            style="background-color: #fff;"
                        >
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium mb-2" style="color: #1E1E1E;">New Password</label>
                        <input 
                            type="password" 
                            id="newPassword" 
                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-rose-300"
                            style="background-color: #fff;"
                        >
                    </div>
                    
                    <div>
                        <label class="block text-sm font-medium mb-2" style="color: #1E1E1E;">Confirm New Password</label>
                        <input 
                            type="password" 
                            id="confirmNewPassword" 
                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:outline-none focus:ring-2 focus:ring-rose-300"
                            style="background-color: #fff;"
                        >
                    </div>
                    
                    <button 
                        type="submit" 
                        class="px-6 py-3 rounded-lg text-white font-semibold transition-colors"
                        style="background: linear-gradient(135deg, #B76E79 0%, #A05A66 100%);"
                        onmouseover="this.style.background='linear-gradient(135deg, #A05A66 0%, #8A4A56 100%)'"
                        onmouseout="this.style.background='linear-gradient(135deg, #B76E79 0%, #A05A66 100%)'"
                    >
                        Change Password
                    </button>
                </form>
            </div>
        </div>
        
        <!-- Account Summary -->
        <div class="lg:col-span-1">
            <div class="rounded-lg shadow-md p-6 sticky top-20" style="background-color: #FAFAFA; border: 1px solid #E5E5E5;">
                <h3 class="text-2xl font-bold mb-6" style="color: #1E1E1E;">Account Summary</h3>
                
                <div class="space-y-4 mb-6">
                    <div class="flex justify-between items-center p-4 rounded-lg" style="background-color: #f8f9fa;">
                        <div>
                            <p class="text-sm" style="color: #666;">Total Orders</p>
                            <p class="text-xl font-bold" style="color: #1E1E1E;"><%= user.orders ? user.orders.length : 0 %></p>
                        </div>
                        <i class="ri-shopping-bag-line text-2xl" style="color: #B76E79;"></i>
                    </div>
                    
                    <div class="flex justify-between items-center p-4 rounded-lg" style="background-color: #f8f9fa;">
                        <div>
                            <p class="text-sm" style="color: #666;">Items in Cart</p>
                            <p class="text-xl font-bold" style="color: #1E1E1E;"><%= user.cart ? user.cart.length : 0 %></p>
                        </div>
                        <i class="ri-shopping-cart-line text-2xl" style="color: #B76E79;"></i>
                    </div>
                    
                    <div class="flex justify-between items-center p-4 rounded-lg" style="background-color: #f8f9fa;">
                        <div>
                            <p class="text-sm" style="color: #666;">Total Spent</p>
                            <% 
                                let totalSpent = 0;
                                if(user.orders && user.orders.length > 0) {
                                    totalSpent = user.orders.reduce((sum, order) => sum + (order.total || 0), 0);
                                }
                            %>
                            <p class="text-xl font-bold" style="color: #1E1E1E;">â‚¹<%= totalSpent %></p>
                        </div>
                        <i class="ri-money-rupee-circle-line text-2xl" style="color: #B76E79;"></i>
                    </div>
                </div>
                
                <div class="space-y-3">
                    <a href="/orders" class="block w-full text-center px-4 py-3 rounded-lg transition-colors" style="background-color: #f8f9fa; color: #1E1E1E;" onmouseover="this.style.backgroundColor='#e9ecef'" onmouseout="this.style.backgroundColor='#f8f9fa'">
                        <i class="ri-file-list-line mr-2"></i>My Orders
                    </a>
                    <a href="/wishlist" class="block w-full text-center px-4 py-3 rounded-lg transition-colors" style="background-color: #f8f9fa; color: #1E1E1E;" onmouseover="this.style.backgroundColor='#e9ecef'" onmouseout="this.style.backgroundColor='#f8f9fa'">
                        <i class="ri-heart-line mr-2"></i>My Wishlist
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        const updateProfileForm = document.getElementById('updateProfileForm');
        const changePasswordForm = document.getElementById('changePasswordForm');
        
        if(updateProfileForm) {
            updateProfileForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const contact = document.getElementById('contact').value;
                const address = document.getElementById('address').value;
                
                try {
                    const response = await fetch('/update-profile', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ contact, address })
                    });
                    
                    const result = await response.json();
                    
                    if(result.success) {
                        // Show success message
                        const successDiv = document.createElement('div');
                        successDiv.className = 'fixed top-20 left-1/2 -translate-x-1/2 z-50 p-4 rounded-lg bg-green-500 shadow-lg animate-fade-in';
                        successDiv.innerHTML = '<span class="inline-block text-white font-medium">' + result.message + '</span>';
                        document.body.appendChild(successDiv);
                        
                        // Auto-remove message after 3 seconds
                        setTimeout(() => {
                            successDiv.remove();
                        }, 3000);
                    } else {
                        alert(result.message);
                    }
                } catch (error) {
                    console.error('Error updating profile:', error);
                    alert('An error occurred while updating your profile');
                }
            });
        }
        
        if(changePasswordForm) {
            changePasswordForm.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const currentPassword = document.getElementById('currentPassword').value;
                const newPassword = document.getElementById('newPassword').value;
                const confirmNewPassword = document.getElementById('confirmNewPassword').value;
                
                if(newPassword !== confirmNewPassword) {
                    alert('New passwords do not match');
                    return;
                }
                
                try {
                    const response = await fetch('/change-password', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ currentPassword, newPassword })
                    });
                    
                    const result = await response.json();
                    
                    if(result.success) {
                        // Show success message
                        const successDiv = document.createElement('div');
                        successDiv.className = 'fixed top-20 left-1/2 -translate-x-1/2 z-50 p-4 rounded-lg bg-green-500 shadow-lg animate-fade-in';
                        successDiv.innerHTML = '<span class="inline-block text-white font-medium">' + result.message + '</span>';
                        document.body.appendChild(successDiv);
                        
                        // Reset form
                        changePasswordForm.reset();
                        
                        // Auto-remove message after 3 seconds
                        setTimeout(() => {
                            successDiv.remove();
                        }, 3000);
                    } else {
                        alert(result.message);
                    }
                } catch (error) {
                    console.error('Error changing password:', error);
                    alert('An error occurred while changing your password');
                }
            });
        }
    });
</script>

<%- include('./partials/footer') %>