<%- include('./partials/header', { isAdmin: true }) %>

<div class="container mx-auto px-4 md:px-8 py-8 flex-grow" style="background-color: #FAFAFA;">
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-3xl font-bold" style="color: #1E1E1E;">Product Reviews</h1>
        <a href="/owners/admin" class="px-4 py-2 rounded-lg text-white transition-colors" style="background-color: #B76E79;" onmouseover="this.style.backgroundColor='#A05A66'" onmouseout="this.style.backgroundColor='#B76E79'">
            Back to Dashboard
        </a>
    </div>
    
    <% if(!productsWithReviews || productsWithReviews.length === 0) { %>
        <div class="text-center py-12">
            <i class="ri-chat-1-line text-6xl mb-4" style="color: #999;"></i>
            <p class="text-xl mb-4" style="color: #666;">No reviews found</p>
            <p class="text-gray-500">Customers haven't submitted any reviews yet.</p>
        </div>
    <% } else { %>
        <div class="space-y-8">
            <% productsWithReviews.forEach(function(productData){ %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <!-- Product Header -->
                    <div class="p-6 border-b border-gray-200">
                        <div class="flex items-center gap-4">
                            <% if(productData.product.image){ %>
                                <div class="w-16 h-16 rounded-lg overflow-hidden flex items-center justify-center" style="background-color:<%= productData.product.bgcolor || '#f3f4f6' %>;">
                                    <img src="<%= productData.product.image %>" alt="<%= productData.product.name %>" class="h-12 w-auto object-contain">
                                </div>
                            <% } else { %>
                                <div class="w-16 h-16 rounded-lg bg-gray-200 flex items-center justify-center">
                                    <i class="ri-image-line text-gray-400 text-xl"></i>
                                </div>
                            <% } %>
                            <div class="flex-1">
                                <h2 class="text-xl font-bold text-gray-900"><%= productData.product.name %></h2>
                                <div class="flex items-center gap-2 mt-1">
                                    <div class="flex text-yellow-400">
                                        <% for(let i = 1; i <= 5; i++) { %>
                                            <% if(i <= productData.averageRating) { %>
                                                <i class="ri-star-fill"></i>
                                            <% } else if(i - 0.5 <= productData.averageRating) { %>
                                                <i class="ri-star-half-line"></i>
                                            <% } else { %>
                                                <i class="ri-star-line"></i>
                                            <% } %>
                                        <% } %>
                                    </div>
                                    <span class="text-lg font-semibold text-gray-900"><%= productData.averageRating %></span>
                                    <span class="text-gray-500">(<%= productData.totalReviews %> reviews)</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Reviews List -->
                    <div class="divide-y divide-gray-100">
                        <% productData.reviews.forEach(function(review, index){ %>
                            <div class="p-6 hover:bg-gray-50 transition-colors">
                                <div class="flex gap-4">
                                    <!-- User Avatar -->
                                    <div class="flex-shrink-0">
                                        <div class="w-12 h-12 rounded-full bg-purple-100 flex items-center justify-center text-purple-600 font-bold">
                                            <%= (review.userId.fullName || review.userId.email).charAt(0).toUpperCase() %>
                                        </div>
                                    </div>
                                    
                                    <!-- Review Content -->
                                    <div class="flex-1">
                                        <div class="flex justify-between items-start mb-2">
                                            <div>
                                                <h4 class="font-semibold text-gray-900">
                                                    <%= review.userId.fullName || review.userId.email.split('@')[0] %>
                                                </h4>
                                                <p class="text-sm text-gray-500">
                                                    <%= new Date(review.date).toLocaleDateString() %> at <%= new Date(review.date).toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'}) %>
                                                </p>
                                            </div>
                                            <div class="flex text-yellow-400">
                                                <% for(let i = 1; i <= 5; i++) { %>
                                                    <% if(i <= review.rating) { %>
                                                        <i class="ri-star-fill"></i>
                                                    <% } else { %>
                                                        <i class="ri-star-line"></i>
                                                    <% } %>
                                                <% } %>
                                            </div>
                                        </div>
                                        
                                        <h5 class="font-medium text-gray-800 mb-2"><%= review.title %></h5>
                                        <p class="text-gray-600"><%= review.comment %></p>
                                        
                                        <% if(review.helpful > 0) { %>
                                            <div class="mt-3 flex items-center gap-2 text-sm text-gray-500">
                                                <i class="ri-thumb-up-line"></i>
                                                <span><%= review.helpful %> people found this helpful</span>
                                            </div>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        <% }) %>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <!-- Summary Stats -->
        <div class="mt-8 grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-blue-100 text-blue-600 mr-4">
                        <i class="ri-star-line text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-600">Total Reviews</p>
                        <p class="text-2xl font-bold text-gray-900">
                            <%= productsWithReviews.reduce((sum, p) => sum + p.totalReviews, 0) %>
                        </p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-green-100 text-green-600 mr-4">
                        <i class="ri-product-hunt-line text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-600">Products Reviewed</p>
                        <p class="text-2xl font-bold text-gray-900"><%= productsWithReviews.length %></p>
                    </div>
                </div>
            </div>
            
            <div class="bg-white rounded-lg shadow-md p-6">
                <div class="flex items-center">
                    <div class="p-3 rounded-full bg-purple-100 text-purple-600 mr-4">
                        <i class="ri-emotion-happy-line text-xl"></i>
                    </div>
                    <div>
                        <p class="text-sm text-gray-600">Avg Rating</p>
                        <p class="text-2xl font-bold text-gray-900">
                            <% 
                                const totalRatings = productsWithReviews.reduce((sum, p) => sum + (p.averageRating * p.totalReviews), 0);
                                const totalReviews = productsWithReviews.reduce((sum, p) => sum + p.totalReviews, 0);
                                const overallAvg = totalReviews > 0 ? (totalRatings / totalReviews).toFixed(1) : 0;
                            %>
                            <%= overallAvg %>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    <% } %>
</div>

<%- include('./partials/footer') %>