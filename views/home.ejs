<%- include('./partials/header') %>

    <% if(success && success.length>0){ %>
        <div class="fixed top-20 left-1/2 -translate-x-1/2 z-50 p-4 rounded-lg bg-green-500 shadow-lg animate-fade-in">
            <span class="inline-block text-white font-medium">
                <%= Array.isArray(success) ? success[0] : success %>
            </span>
        </div>
        <% } %>

            <!-- Hero Section -->
            <section class="relative py-20 overflow-hidden"
                style="background: linear-gradient(135deg, rgba(183, 110, 121, 0.1) 0%, rgba(30, 30, 30, 0.05) 100%);">
                <div class="container mx-auto px-4 text-center">
                    <h1 class="text-5xl md:text-6xl font-bold mb-6 brand-font" style="color: #B76E79;">
                        Welcome to URBAN ÉLITE
                    </h1>
                    <p class="text-xl mb-8" style="color: #666;">Discover elegance, quality, and style</p>
                    <a href="/shop"
                        class="inline-block px-8 py-4 rounded-lg text-white font-semibold transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
                        style="background-color: #B76E79;" onmouseover="this.style.backgroundColor='#A05A66'"
                        onmouseout="this.style.backgroundColor='#B76E79'">
                        Shop Now
                    </a>
                </div>
            </section>

            <!-- Featured Products -->
            <section class="py-20" style="background-color: #FAFAFA;">
                <div class="container mx-auto px-4">
                    <h2 class="text-3xl font-bold text-center mb-12 brand-font" style="color: #1E1E1E;">Featured
                        Products</h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <% products.forEach(function(product){ %>
                            <div class="rounded-lg shadow-md hover:shadow-xl transition-all duration-300 overflow-hidden"
                                style="background-color: #FAFAFA; border: 1px solid #E5E5E5;">
                                <a href="/product/<%=product._id%>">
                                    <div class="w-full h-64 flex items-center justify-center"
                                        style="background-color:<%= product.bgcolor || '#FAFAFA' %>">
                                        <% if(product.image){ %>
                                            <img class="h-full w-auto object-contain" src="<%= product.image %>"
                                                alt="<%= product.name %>">
                                            <% } else { %>
                                                <p class="text-gray-400">No Image Available</p>
                                                <% } %>

                                    </div>
                                </a>
                                <div class="p-4"
                                    style="background-color: <%= product.panelcolor || '#FAFAFA' %>; color: <%= product.textcolor || '#1E1E1E' %>">
                                    <h3 class="font-semibold text-lg mb-2">
                                        <%= product.name %>
                                    </h3>
                                    <div class="flex items-center justify-between">
                                        <% let hasDiscount=product.discount && product.discount> 0;
                                            let originalPrice = product.price + (product.discount || 0);
                                            let finalPrice = product.price;
                                            %>
                                            <div>
                                                <span class="text-xl font-bold">₹ <%= finalPrice %></span>
                                                <% if(hasDiscount){ %>

                                                    <!-- Show ONLY if discount exists -->
                                                    <span class="text-sm text-gray-500 line-through">
                                                        ₹ <%= originalPrice %>
                                                    </span>

                                                    <span class="text-sm text-green-600 font-medium">
                                                        Save ₹<%= product.discount %>
                                                    </span>

                                                    <% } %>

                                            </div>
                                            <div class="flex gap-2">
                                                <a href="/addtocart/<%=product._id%>"
                                                    class="px-3 py-2 rounded-lg text-white transition-colors"
                                                    style="background-color: #B76E79;"
                                                    onmouseover="this.style.backgroundColor='#A05A66'"
                                                    onmouseout="this.style.backgroundColor='#B76E79'">
                                                    <i class="ri-shopping-cart-line"></i>
                                                </a>
                                                <a href="/add-to-wishlist/<%=product._id%>"
                                                    class="px-3 py-2 rounded-lg text-white transition-colors"
                                                    style="background-color: #6c757d;"
                                                    onmouseover="this.style.backgroundColor='#5a6268'"
                                                    onmouseout="this.style.backgroundColor='#6c757d'">
                                                    <i class="ri-heart-line"></i>
                                                </a>
                                            </div>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <div class="text-center mt-8">
                        <a href="/shop"
                            class="inline-block px-6 py-3 rounded-lg text-white font-semibold transition-colors"
                            style="background-color: #B76E79;" onmouseover="this.style.backgroundColor='#A05A66'"
                            onmouseout="this.style.backgroundColor='#B76E79'">
                            View All Products
                        </a>
                    </div>
                </div>
            </section>

            <!-- Customer Experience Section -->
